    SpeedButton.Text = speedActive and "Speed Ayarı (Açık)" or "Speed Ayarı (Kapalı)"
    player.Character.Humanoid.WalkSpeed = speedActive and 50 or 16 -- Varsayılan hız
end)

local jumpActive = false

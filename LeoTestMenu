local ScreenGui = Instance.new("ScreenGui")
ScreenGui.Name = "LeoHubUI"
ScreenGui.Parent = game:GetService("CoreGui")

-- Ana MenÃ¼ Frame
local MainFrame = Instance.new("Frame")
MainFrame.Size = UDim2.new(0, 380, 0, 280)
MainFrame.Position = UDim2.new(0.5, -190, 0.5, -140)
MainFrame.AnchorPoint = Vector2.new(0.5, 0.5)
MainFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
MainFrame.BorderSizePixel = 0
MainFrame.Active = true
MainFrame.Draggable = true
MainFrame.Parent = ScreenGui

local UICorner = Instance.new("UICorner")
UICorner.CornerRadius = UDim.new(0, 14)
UICorner.Parent = MainFrame

local UIStroke = Instance.new("UIStroke")
UIStroke.Thickness = 2.5
UIStroke.Color = Color3.fromRGB(0, 200, 255)
UIStroke.Transparency = 0.1
UIStroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
UIStroke.Parent = MainFrame

-- Gradient Arkaplan
local UIGradient = Instance.new("UIGradient")
UIGradient.Color = ColorSequence.new{
    ColorSequenceKeypoint.new(0, Color3.fromRGB(10, 10, 40)),
    ColorSequenceKeypoint.new(1, Color3.fromRGB(0, 200, 255))
}
UIGradient.Rotation = 45
UIGradient.Parent = MainFrame

-- BaÅŸlÄ±k
local Title = Instance.new("TextLabel")
Title.Size = UDim2.new(1, -20, 0, 45)
Title.Position = UDim2.new(0, 10, 0, 0)
Title.BackgroundTransparency = 1
Title.Text = "âš¡ LeoHubUI âš¡"
Title.Font = Enum.Font.GothamBold
Title.TextSize = 24
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.TextStrokeTransparency = 0.7
Title.Parent = MainFrame

-- Buton oluÅŸturma fonksiyonu
local function createButton(name, order, callback)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(1, -40, 0, 42)
    btn.Position = UDim2.new(0, 20, 0, 55 + (order * 48))
    btn.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    btn.Text = name
    btn.TextColor3 = Color3.fromRGB(255, 255, 255)
    btn.Font = Enum.Font.GothamBold
    btn.TextSize = 18
    btn.AutoButtonColor = true
    btn.Parent = MainFrame

    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, 10)
    corner.Parent = btn

    local stroke = Instance.new("UIStroke")
    stroke.Color = Color3.fromRGB(0, 255, 200)
    stroke.Thickness = 1.5
    stroke.Transparency = 0.2
    stroke.Parent = btn

    btn.MouseEnter:Connect(function()
        btn.BackgroundColor3 = Color3.fromRGB(0, 120, 200)
    end)
    btn.MouseLeave:Connect(function()
        btn.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
    end)

    btn.MouseButton1Click:Connect(callback)
end

-- Butonlar
createButton("ðŸš€ Fly", 0, function()
    print("Fly Activated!")
end)

createButton("âš¡ Speed Boost", 1, function()
    print("Speed Activated!")
end)

createButton("ðŸ‘¤ Avatar Copy", 2, function()
    print("Avatar Copy Triggered!")
end)

createButton("ðŸ”„ Rejoin", 3, function()
    game:GetService("TeleportService"):TeleportToPlaceInstance(game.PlaceId, game.JobId, game.Players.LocalPlayer)
end)

createButton("ðŸ’€ Reset Character", 4, function()
    game.Players.LocalPlayer.Character:BreakJoints()
end)

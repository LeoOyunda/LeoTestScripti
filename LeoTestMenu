-- teleport button
local tpBtn = Instance.new("TextButton", main)
tpBtn.Text = "Teleport to Spawn"
tpBtn.Size = UDim2.new(0.44, 0, 0, 34)
tpBtn.Position = UDim2.new(0.05, 0, 0.92, 0)
